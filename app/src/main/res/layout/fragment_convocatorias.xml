<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/color_letra"
    tools:context=".view.inicio_logueados_estudiantes.convocatoriasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/convocatoria"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:background="@color/azul_princpal"
                    android:text="@string/convocatoria_externas"
                    android:textColor="@color/color_letra"
                    android:textSize="19dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_margin="18dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/convocatoria"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:background="@color/azul_princpal"
                    android:text="@string/convocatoria_externas"
                    android:textColor="@color/color_letra"
                    android:textSize="19dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>