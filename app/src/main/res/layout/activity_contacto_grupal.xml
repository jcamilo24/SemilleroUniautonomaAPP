<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/texto_secundario"
    android:orientation="vertical"
    tools:context=".view.inicio_logueados_docentes.contacto_grupal_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/estilo_titulo"
                android:backgroundTint="@color/azul_secundario"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imagen_anterior_de_contactMiembro"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:rotation="182"
                    android:layout_gravity="left"
                    app:srcCompat="@drawable/ic_baseline_double_arrow_24" />
                <TextView
                    android:id="@+id/titulo_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Contacta a tus estudiantes!!!"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_marginTop="35dp"
                    android:textColor="@color/azul_terceario"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correo_docente"
                    android:textSize="16dp"
                    android:textColor="@color/azul_terceario"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/correo_miembro"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintcorreo_docente"
                    android:textColor="@color/azul_princpal"
                    android:textColorHint="@color/azul_terceario"
                    android:inputType="textEmailAddress"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tema_correo"
                    android:textSize="16dp"
                    android:textColor="@color/azul_terceario"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/tema_miembro"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hinttema"
                    android:textColor="@color/azul_princpal"
                    android:textColorHint="@color/azul_terceario"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descripcion_correo"
                    android:textSize="16dp"
                    android:textColor="@color/azul_terceario"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/contenido_miembro"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:hint="@string/hintdescripcion"
                    android:textColor="@color/azul_princpal"
                    android:textColorHint="@color/azul_terceario"
                    android:fontFamily="sans-serif"
                    android:gravity="clip_vertical"/>
            </LinearLayout>

            <Button
                android:id="@+id/enviar_correo_miembro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:text="@string/enviar"
                android:backgroundTint="@color/dorado"
                android:background="@drawable/estilo_texto"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_universidad"
                android:textColor="@color/azul_princpal"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>