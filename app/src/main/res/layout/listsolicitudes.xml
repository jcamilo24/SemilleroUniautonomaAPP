<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expandible"
    android:orientation="vertical"
    tools:context=".view.inicio_logueados_docentes.solicitudes_Fragment"
    android:background="@color/texto_secundario"
    android:animateLayoutChanges="true"
    app:cardUseCompatPadding="true"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="45dp"
    android:outlineAmbientShadowColor="@color/educacion"
    android:outlineSpotShadowColor="@color/educacion">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_gravity="center"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/dorado"
                    android:fontFamily="sans-serif"
                    android:background="@color/ingenieria"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:text="Solicitud Nueva"
                    android:padding="15dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/expand"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="15dp"
                    android:backgroundTint="@color/ingenieria"
                    android:outlineAmbientShadowColor="@color/educacion"
                    android:outlineSpotShadowColor="@color/educacion">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Nombre:"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="18dp"/>
                            <TextView
                                android:id="@+id/nombre_estudiante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="fecha"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="18dp"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Facultad:"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="18dp" />
                            <TextView
                                android:id="@+id/facultad_estudiante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="fecha"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="18dp"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Rol:"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="18dp" />
                            <TextView
                                android:id="@+id/rol_estudiante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="fecha"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="18dp"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Correo"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="17dp" />
                            <ImageView
                                android:id="@+id/image_contacto_pendiente"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/contacto_lider2" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/correo_estudiante"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="fecha"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"
                            android:background="@color/ingenieria"
                            android:textSize="17dp"
                            android:layout_gravity="center"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Estado:"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="19dp"/>
                            <TextView
                                android:id="@+id/estado_miembro_estudiante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="fecha"
                                android:textColor="@color/dorado"
                                android:fontFamily="sans-serif"
                                android:background="@color/ingenieria"
                                android:textSize="21dp"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp">
                        <Button
                            android:id="@+id/aceptar_estudiante"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:text="Aceptar"
                            android:textStyle="bold"
                            android:textColor="@color/texto_secundario"
                            android:backgroundTint="@color/ambiental"
                            android:background="@drawable/estilo_texto">
                        </Button>
                        <Button
                            android:id="@+id/rechazar_estudiante"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Rechazar"
                            android:textStyle="bold"
                            android:textColor="@color/texto_secundario"
                            android:backgroundTint="@color/derecho"
                            android:background="@drawable/estilo_texto">
                        </Button>
                    </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>