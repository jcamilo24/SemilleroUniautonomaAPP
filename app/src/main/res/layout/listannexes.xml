<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:id="@+id/expandible"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="30dp"
    android:outlineAmbientShadowColor="@color/educacion"
    android:outlineSpotShadowColor="@color/educacion">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_gravity="center"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tipo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/azul_secundario"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:text="beneficio"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/expand"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="15dp"
                    android:backgroundTint="@color/azul_secundario"
                    android:outlineAmbientShadowColor="@color/educacion"
                    android:outlineSpotShadowColor="@color/educacion">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/descripcion"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/estilo_texto"
                            android:backgroundTint="@color/texto_secundario"
                            android:text="@string/desc_edu"
                            android:textColor="@color/negro"
                            android:textSize="15dp"
                            android:textStyle="italic"
                            android:padding="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center">
                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>