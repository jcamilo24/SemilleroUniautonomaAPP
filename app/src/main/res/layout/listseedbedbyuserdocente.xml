<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expandible"
    android:orientation="vertical"
    tools:context=".view.inicio_logueados_docentes.inicio_logueados_docenteFragment"
    android:background="@color/texto_secundario"
    android:animateLayoutChanges="true"
    app:cardUseCompatPadding="true"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="45dp"
    android:outlineAmbientShadowColor="@color/educacion"
    android:outlineSpotShadowColor="@color/educacion">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_gravity="center"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ingenieria">
                <TextView
                    android:id="@+id/titulo_semillero"
                    android:text="Nombre del Semillero"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    android:background="@color/ingenieria"
                    android:textSize="19dp"
                    android:padding="15dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:id="@+id/expand"
                    android:layout_gravity="center"
                    app:cardElevation="15dp"
                    android:backgroundTint="@color/ingenieria"
                    android:outlineAmbientShadowColor="@color/ingenieria"
                    android:outlineSpotShadowColor="@color/ingenieria">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/mensaje_grupal"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/contactar_estudiantes"
                                android:textStyle="bold"
                                android:textColor="@color/texto_secundario"
                                android:backgroundTint="@color/naranja"
                                android:background="@drawable/estilo_texto"
                                android:layout_marginBottom="15dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Miembros"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"/>
                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="20dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/listmiembros_semillero"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/></LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/descripcion_semillero"
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/estilo_texto"
                            android:backgroundTint="@color/texto_secundario"
                            android:text="@string/desc_ing"
                            android:textColor="@color/negro"
                            android:textSize="15dp"
                            android:textStyle="italic"
                            android:padding="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center">
                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>