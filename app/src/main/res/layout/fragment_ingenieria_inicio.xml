<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/semillero_educacion1"
    tools:context=".view.semilleros.IngenieriaInicioFragment"
    android:background="@color/texto_secundario">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/subtitulo"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="@string/ingenieria"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="@color/azul_princpal"
                        android:textSize="30sp"/>
                    <ImageView
                        android:id="@+id/imagen_siguiente"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/ic_baseline_double_arrow_24"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listsemillerosIngenieria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />
                        <include layout="@layout/shimmer_fragment_home" />

                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>