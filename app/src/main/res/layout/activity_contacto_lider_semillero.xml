<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Contacto_lider_semillero"
    android:background="@color/texto_secundario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilo_titulo"
                android:backgroundTint="@color/azul_secundario"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imagen_anterior"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:rotation="182"
                    android:layout_gravity="left"
                    app:srcCompat="@drawable/ic_baseline_double_arrow_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_contacto_lider"
                    android:layout_gravity="center"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_terceario"
                    android:fontFamily="sans-serif"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/correo_estudiante"
                        android:textSize="16dp"
                        android:textColor="@color/azul_terceario"
                        android:layout_marginLeft="15dp"/>
                    <EditText
                        android:id="@+id/correo_estu"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:hint="Correo"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="textPersonName"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nombre_estudiante"
                        android:textSize="16dp"
                        android:textColor="@color/azul_terceario"
                        android:layout_marginLeft="15dp"/>
                    <EditText
                        android:id="@+id/nombre_estu"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/hintname"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="textPersonName"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Codigo del Estudiante"
                        android:textSize="16dp"
                        android:textColor="@color/azul_terceario"
                        android:layout_marginLeft="15dp"/>
                    <EditText
                        android:id="@+id/codigo_estu"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:hint="Codigo"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="number"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/semestre_estudiante"
                        android:textSize="16dp"
                        android:textColor="@color/azul_terceario"
                        android:layout_marginLeft="15dp"/>
                    <EditText
                        android:id="@+id/semestre"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/hintsemestre"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="number"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carrera_estudiante"
                        android:textSize="16dp"
                        android:textColor="@color/azul_terceario"
                        android:layout_marginLeft="15dp"/>
                    <EditText
                        android:id="@+id/carrera"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/hintcarrera"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correo_docente"
                    android:textSize="16dp"
                    android:textColor="@color/azul_terceario"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/correo"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintcorreo_docente"
                    android:textColor="@color/azul_princpal"
                    android:textColorHint="@color/azul_terceario"
                    android:inputType="textEmailAddress"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tema_correo"
                    android:textSize="16dp"
                    android:textColor="@color/azul_terceario"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/tema"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hinttema"
                    android:textColor="@color/azul_princpal"
                    android:textColorHint="@color/azul_terceario"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descripcion_correo"
                    android:textSize="16dp"
                    android:textColor="@color/azul_terceario"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/contenido"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:hint="@string/hintdescripcion"
                    android:textColor="@color/azul_princpal"
                    android:textColorHint="@color/azul_terceario"
                    android:fontFamily="sans-serif"
                    android:gravity="clip_vertical"/>
            </LinearLayout>

            <Button
                android:id="@+id/enviar_correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:text="@string/enviar"
                android:backgroundTint="@color/dorado"
                android:background="@drawable/estilo_texto"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>