<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/texto_secundario"
    tools:context=".view.publicaciones.Detalle_publicaciones_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estilo_titulo"
                android:backgroundTint="@color/azul_secundario"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imagen_anterior"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="15dp"
                    android:rotation="182"
                    android:layout_gravity="left"
                    app:srcCompat="@drawable/ic_baseline_double_arrow_24" />
                <TextView
                    android:id="@+id/titulopublidetalle"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/titulo_educacion_6"
                    android:textColor="@color/texto_secundario"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="160dp"
                        android:orientation="vertical">
                            <ImageView
                                android:id="@+id/imagendetallenews"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/textfechadetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="fecha"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/azul_terceario"
                    android:fontFamily="sans-serif"
                    android:textSize="19dp"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/descripciondetalle"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/estilo_texto"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/azul_secundario"
                    android:text="@string/desc_edu"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:padding="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>