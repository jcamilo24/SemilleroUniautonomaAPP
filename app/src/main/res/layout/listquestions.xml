<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expandible"
    android:orientation="vertical"
    android:background="@color/texto_secundario"
    android:animateLayoutChanges="true"
    app:cardUseCompatPadding="true"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="45dp"
    android:outlineAmbientShadowColor="@color/educacion"
    android:outlineSpotShadowColor="@color/educacion">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_gravity="center"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titulo_pregunta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/azul_princpal"
                    android:textSize="19dp"
                    android:text="holaaaa"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/expand"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="15dp"
                    android:outlineAmbientShadowColor="@color/educacion"
                    android:outlineSpotShadowColor="@color/educacion">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/categoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="categoria"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/azul_princpal"
                            android:textSize="19dp"
                            android:padding="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:id="@+id/respuesta"
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="25dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/respuesta1"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/azul_terceario"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>